<div class="row">
    <div class="col-6">
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ Add User</a>
    </div>
</div>

{{#if removedUser}}
<div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    User has been removed.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each result}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>
                <a href="/viewuser/{{this.id}}" type="button" class="btn btn-primary btn-small"><i
                        class="bi bi-eye"></i></a>
                <a href="/edituser/{{this.id}}" type="button" class="btn btn-success btn-small"><i
                        class="bi bi-pencil"></i></a>
                <a href="/{{this.id}}" type="button" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>